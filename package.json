{
  "name": "link-formatter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://tung-elfie.github.io/format-linear-tickets-link",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:extension": "vite build --config vite.extension.config.ts && node scripts/build-extension.js",
    "build:all": "npm run build && npm run build:extension",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "dev:extension": "vite build --config vite.extension.config.ts --watch",
    "package:extension": "node scripts/package-extension.js",
    "deploy:extension": "./deploy.sh",
    "deploy:quick": "./quick-deploy.sh",
    "create-crx": "node scripts/create-crx.js",
    "prepare-release": "node scripts/create-github-release.js",
    "distribute": "npm run build:extension && npm run create-crx && npm run prepare-release",
    "deploy:pages": "node scripts/deploy-github-pages.js && git add . && git commit -m 'Deploy extension installer to GitHub Pages' && git subtree push --prefix gh-pages-temp origin gh-pages",
    "deploy:pages:setup": "node scripts/deploy-github-pages.js"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.1",
    "@vitejs/plugin-react": "^4.3.4",
    "gh-pages": "^6.3.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "webextension-polyfill": "^0.10.0",
    "zip-folder": "^1.0.0"
  }
}